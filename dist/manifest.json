{
  "name": "MediumUnblocker",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Extension to remove sign-up/login blocker for medium.com articles.",
  "homepage_url": "https://github.com/adityak74/mediumUnblocker",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "MU",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "cookies",
    "https://*.medium.com/*",
    "http://*.medium.com/*",
    "https://*.uxdesign.cc/*",
    "http://*.uxdesign.cc/*",
    "https://levelup.gitconnected.com/",
    "https://levelup.gitconnected.com/*"
  ],
  "content_security_policy": "default-src 'self';",
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*",
        "https://uxdesign.cc/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}
